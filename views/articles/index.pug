doctype html
html(lang="en")
    head
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Crystal Chavez Blog
    body
        div.container
            h1.mb-4 Blog Articles
            a(href='/articles/new').btn.btn-success New Article
            each article in articles
                div.card.mt-4
                    div.card-body
                        h4.card-title= article.title
                        div.card-subtitle.text-muted.b-2
                            p= article.createdAt.toLocaleDateString()
                        div.card-text.mb-2
                            p= article.description
                        a(href=`articles/${article.id}`).btn.btn-primary READ MORE
                        form(action=`/articles/${article.id}?_method=DELETE` method="POST").d-inline
                            button(type="submit").btn.btn-danger Delete
